<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.albani.proyectotopicos.MasCercanos"
    android:background="@drawable/scroll">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="El Colmao"
                android:id="@+id/button"
                android:onClick="Colmao"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Les Jardins du Sucre"
                android:id="@+id/button2"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Jardin"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Maxi Donas"
                android:id="@+id/button3"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Maxi"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Il Ravioli Restaurant"
                android:id="@+id/button4"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Ravioli"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Rika&apos;s Pizzas"
                android:id="@+id/button5"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Rika"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Heladeria Rosita"
                android:id="@+id/Rosita"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Rosita"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="McDonald&apos;s"
                android:id="@+id/button7"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Donald"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:text="Salim Pinchos Grill"
                android:id="@+id/button8"
                android:background="#7f000000"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:onClick="Salim"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
